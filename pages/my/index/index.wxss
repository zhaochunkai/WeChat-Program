page{
  height: 100%;
  overflow-y: scroll !important;
}
.header{
  width: 100%;
  height: 150px;
  text-align: center;
}
.header .image{
  width: 50px;
  height: 50px;
  border-radius: 50px;
  margin: 20px auto;
}
.item{
  height: 50px;
  border-bottom: 1px solid #eee;
  padding: 0 10px;
  line-height: 50px;
  display: flex;
}
.title{
  float: left;
  font-size: 14px;
  font-weight: 500;
  flex: 1;
}
.content{
  height: calc(100%-150px);
  overflow-y: auto;
}