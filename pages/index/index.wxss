.banner-top-wrapper {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 0;
  padding-top: 50%;
}

.content {
  /* border: 1px solid #A1A5A2; */
  height: auto;
  margin-top: 20px;
}

.project {
  float: left;
  /* padding-left: 50px; */
  text-align: center;
  width: 200rpx;
}

.banner-top-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.project-img {
  width: 40px;
  height: 40px;
  margin-top:1rem;
}
.project view{
  font-size: 12px;
}
page{
  position: relative;
  width: 100%;
  height: 100%;
}
.authorization{
  width: 250px;
  height: 300px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  border-radius: 10px;
  border: 1px solid #ccc;
}
.authorization .img{
  width: 100%;
  height: 100px;
}
.authorization .img image{
  width: 100%;
  height: 100%;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.authorization .title{
  margin: 20px 0;
  text-align: center;
  color: #000;
  font-size: 14px;
}
.authorization .details{
  font-size: 12px;
  color: #666;
  padding: 0 10px;
  line-height: 18px;
}
.authorization button{
  margin-top: 20px;
  font-size: 14px;
}
.authorization .but{
  width: 100px;
  height: 33px;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  bottom: 32px;
  background-color: #f66;
  border-radius: 99px;
  text-align: center;
  line-height: 33px;
  color: #fff;
  font-size: 12px;
}
.butt{
  z-index: 999;
  opacity: 0;
}
.selectLessee{
  width: 300px;
  height: 300px;
  border: 1px solid #ccc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10px;
  background-color: #fff;
  padding: 5px;
  box-sizing: border-box;
}
.selectLessee .header{
  width: 100%;
  height: 40px;
  background-color: #66ccff;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  padding: 5px 10px;
  box-sizing: border-box;
}
.selectLessee .header .search{
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
}
.selectLessee .header .input{
  width: 60%;
  height: 100%;
  float: left;
}
.selectLessee .header .input input{
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  border: 1 rpx solid #ccc;
  font-size: 12px;
}
.selectLessee .header .button{
  width: 20%;
  height: 100%;
  float: left;
}
.selectLessee .header .del{
  width: 20%;
  height: 100%;
  float: left;
  font-size: 12px;
  color: #666;
  line-height: 30px;
  text-align: center;
}
.van-icon-delete{
  line-height: 30px !important;
}
.selectLessee .main{
  height: 200px;
  width: 100%;
  box-sizing: border-box;
  margin-top:10px ;
  overflow-y:auto;
  margin-bottom: 5px;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}
.van-radio{
  width: 100%;
  height: 30px;
  line-height: 30px;
}
.selectLessee .footer{
  width: 100%;
  height: 30px;
  text-align: center;
}
.selectbg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.9;
}