page {
  height: 100%;
}

camera {
  width: 100%;
  height: 100%;
}

.controls {
  position: absolute;
  width: 300px;
  height: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -80%)
}

.controls .img {
  width: 100%;
  height: 100%;
}

.noticeTXT {
  font-size: 14PX;
  color: rgb(12, 242, 240);
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translate(-50%)
}

.wire {
  position: absolute;
  width: 100%;
  height: 3px;
  opacity: 0.3;
}
.count{
  width: 100px;
  height: 100px;
  color: #fff;
  font-size: 70px;
  margin-left: 50%;
  margin-top: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  line-height: 100px;
}