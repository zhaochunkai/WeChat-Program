.page .header{
  height: 30px;
  background-color: #ccc;
  font-weight: 600;
  font-size: 14px;
  padding: 0 20px;
  line-height: 30px;
}
.page .card{
  box-sizing: border-box;
  width: 100%;
  height: 120px;
  border-bottom: 1px solid #ccc;
  margin-bottom: 15px;
  display:flex;
  flex-direction:row ;
}
.page .card .img{
  width: 60px;
  height: 60px;
  margin: 30px 10px;
}
.page .card .img image{
  width: 100%;
  height: 100%;
}
.page .card .content{
  padding: 10px 0;
  width:calc(100% - 120px);
}
.page .card .content .title{
  font-size: 16px;
  width: 100%;
  margin-top: 5px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.page .card .content .dec{
  font-size: 12px;
  color: #000;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  margin-top: 5px;
  line-height: 20px;
}
.van-tag--success{
  margin-right: 5px !important;
}