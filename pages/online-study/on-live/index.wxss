/* pages/online-study/on-live/index.wxss */
.page{
  padding: 0 20px;
}
.page .card{
  width: 100%;
  height: 120px;
  border-bottom: 1px solid #ccc;
  margin: 15px 0;
  display:flex;
  flex-direction:row ;
}
.page .card .img{
  width: 60px;
  height: 60px;
  line-height: 145px;
  margin: 10px 10px;
}
.page .card .img image{
  width: 100%;
  height: 100%;
}
.page .card .content{
  padding: 10px 0;
  width:calc(100% - 120px);
  position: relative;
}
.page .card .content .top{
  height: 18px;
  line-height: 18px;
  width: 100%;
  font-size: 12px;
}
.page .card .content .top .image{
  width: 18px;
  height: 18px;
  float: left;
}
.page .card .content .top .image image{
  width: 100%;
  height: 100%;
}
.page .card .content .top .name{
  float: left;
  margin-left: 3px;
  color: #25B99B;
}
.page .card .content .top .go{
  float: right;
  color: #ccc;
  margin-right: 20px;
}
.page .card .content .title{
  font-size: 16px;
  width: 100%;
  margin-top: 5px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.page .card .content .dec{
  font-size: 12px;
  color: #666;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.time{
  font-size: 12px;
  width: 100%;
  color: #666;
  margin-top: 5px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}