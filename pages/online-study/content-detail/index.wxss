/* pages/online-study/content-detail/index.wxss */
.title{
  margin: 10px 0;
  text-align: center;
  font-weight: 900;
  font-size: 16px;
  color: #000;
}
.content{
  height: 50px;
  padding: 10px;
  display: flex;
}
.content .left{
  width: 70%;
}
.content .left .left-top,.left-bot{
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: #666;
  display: flex;
}
.content .left .left-bot .bot-item{
  line-height: 25px;
  border-radius: 99px;
  color: #fff;
  font-size: 12px;
  background-color: green;
  padding: 0 3px;
  margin-left: 10px;
}
.content .right{
  width: 30%;
  text-align: center;
}
.video{
  width: 100%;
  height: 213px;
  border: 1px solid #ccc;
}
.span{
  text-align: center;
  font-size: 12px;
  border: 1rpx solid #eee;
  color: #ff976a;
}
image{
  width: 100%;
  height: 200px;
}
audio{
  position: absolute;
  left: 50%;
  transform: translate(-50%);
}

page {
  height: 100%;
}

camera {
  width: 100%;
  height: 100%;
}

.controls {
  position: absolute;
  width: 300px;
  height: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -80%)
}

.controls .img {
  width: 100%;
  height: 100%;
}

.noticeTXT {
  font-size: 14PX;
  color: rgb(12, 242, 240);
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translate(-50%)
}

.wire {
  position: absolute;
  width: 100%;
  height: 3px;
  opacity: 0.3;
}
.count{
  width: 100px;
  height: 100px;
  color: #fff;
  font-size: 70px;
  margin-left: 50%;
  margin-top: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  line-height: 100px;
}