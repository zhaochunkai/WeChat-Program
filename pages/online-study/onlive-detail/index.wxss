/* pages/online-study/onlive-detail/index.wxss */
page{
  height: 100%;
  width: 100%;
  position: relative;
}
.page{
  height: 100%;
  width: 100%;
}
.top{
  width: 100%;
  height: 200px;
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}
.top .bigIcon{
  height: 25px;
  width: 25px;
  position: absolute;
  bottom: 10px;
  right: 20px;
}
.top .smallIcon{
  height: 25px;
  width: 25px;
  position: absolute;
  bottom: 10px;
  left: 20px;
}
.tab{
  height: calc(100% - 400rpx);
}
.van-tabs{
  height: 100%;
}
.van-tabs__content{
 height: calc(100% - 88rpx);
}
.van-tabs__track{
  height: 100%;
}
.chatting{
  height: calc(100vh - 525rpx);
  padding: 10px;
}
.chatting .bot{
  width: 100%;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input{
  flex: 1;
  height: 100%;
  margin-right: 30rpx;
}
.input input{
  height: 28px;
  padding: 0 10px;
  font-size: 12px;
  border: 2rpx solid #ccc;
}
.send{
  width: 120rpx;
  text-align: center;
}
.msgBlock{
  height: calc(100% - 80rpx);
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  /* margin-top: -10px; */
}
.msgBlock .msg{
  height: auto;
  padding: 5px 10px;
  float: left;
  width: 100%;
  box-sizing: border-box;
}
.msg-left{
  float: left;
}
.headerImg{
  width: 30px;
  height: 30px;
  margin-top: 5px;
  border-radius: 50%;
  border: 1px solid #ccc;
}
.headerImg image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.msg-rit{
  float: left;
  font-size: 12px;
  color: #666;
  padding: 0 10px;
  max-width: 260px;
  height: auto;
}
.content{
  border: 1px solid #ccc;
  position: relative;
  border-radius: 10px;
  min-height: 25px;
  height: auto;
  word-break:break-all;
}
.detail{
  padding: 3px 5px;
}
.item{
  margin-left: 25px;
  margin-top: 10px;
}
.item .label{
  font-size: 14px;
  font-weight: 600;
  color: #000;
}
.item .label text{
  font-size: 12px;
  color: #666;
}
.live-audience{
  padding: 10px 20px;
}
.live-audience .live-top{
  font-size: 12px;
  color: #666;
}
.live-audience .live-top .total{
  color: #3399ff;
}
.card{
  height: 200px;
}
.card .userInfo{
  position: relative;
  width: 30px;
  height: 50px;
  float: left;
  margin:0 5px;
}
.card .userInfo .img{
  width: 30px;
  height: 30px;
}
.card .userInfo .img image{
  width: 100%;
  height: 100%;
}
.card .userInfo .name{
  font-size: 10px;
  text-align: center;
  line-height: 20px;
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.card .userInfo .icon{
  width: 10px;
  height: 10px;
  position: absolute;
  border-radius: 99px;
  bottom: 20px;
  right: 0;
}

page {
  height: 100%;
}

camera {
  width: 100%;
  height: 100%;
}

.controls {
  position: absolute;
  width: 300px;
  height: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -80%)
}

.controls .img {
  width: 100%;
  height: 100%;
}

.noticeTXT {
  font-size: 14PX;
  color: rgb(12, 242, 240);
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translate(-50%)
}

.wire {
  position: absolute;
  width: 100%;
  height: 3px;
  opacity: 0.3;
}
.count{
  width: 100px;
  height: 100px;
  color: #fff;
  font-size: 70px;
  margin-left: 50%;
  margin-top: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  line-height: 100px;
}
.msghintMessage{
  font-size: 12px;
  color: #666;
  text-align: center;
  margin-top: 10px;
}
.shade{
  width: 100%;
  height: 200px;
  position: absolute;
  z-index: 999;
  top: 0;
}
.shade .loading{
  width: 50px;
  height: 50px;
  margin: 0 auto;
  margin-top: 30px;
}
.shade .promptmessage{
  text-align: center;
  font-size: 14px;
  color: #666;
  margin-top: 20px;
}