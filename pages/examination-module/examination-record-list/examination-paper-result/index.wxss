.page{
  font-size: 14px;
}
.examPaperHeader{
  padding:2rem 10px;
  background-color: #eff9fa;
}
.course-name{
  color: #04a0f0;
  font-weight: bold;
  font-size: 15px;
}
/* .examPaperContent{
